{
    "name": "zjkiza/response-validator-bundle",
    "description": "Response validator bundle.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
      {
        "name": "Zoran Jankovic",
        "email": "zjkiza@gmail.com"
      }
    ],

    "require": {
      "php": ">=8.2",
      "psr/log": "^3.0",
      "symfony/config": "^5.0|^6.0|^7.0",
      "symfony/dependency-injection": "^5.0|^6.0|^7.0",
      "symfony/http-kernel":  "^5.0|^6.0|^7.0"
    },
    "autoload": {
        "psr-4": {
            "ZJKiza\\HttpResponseValidator\\": "src/"
        },
        "files": [
              "src/functions.php"
        ]
    },
    "autoload-dev": {
      "psr-4": {
        "ZJKiza\\HttpResponseValidator\\Tests\\": "tests/"
      }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.52",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "rector/rector": "^2.0",
        "vimeo/psalm": "^6.13",
        "phpunit/phpunit": "^12.4",
        "psalm/plugin-phpunit": "^0.19",
        "symfony/framework-bundle": "^7.3",
        "icanhazstring/composer-unused": "^0.9.5",
        "symfony/yaml": "^8.0",
        "symfony/http-client": "^8.0"
    },
    "scripts": {
        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit --testdox --coverage-html ./build/phpunit",
        "phpstan": "vendor/bin/phpstan analyse -v",
        "psalm": "vendor/bin/psalm --threads=8 --no-diff --no-cache",
        "rector": "vendor/bin/rector",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --diff --verbose --show-progress=dots --allow-risky=yes"
    }
}
